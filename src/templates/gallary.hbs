{{#each this}}
  <li class='gallery__item puff-in-center'>
    <div class='gallery-box__img'>

      <img
        class='gallery__img'
        src='{{this.images.0.url}}'
        alt='poster'
        loading='lazy'
        data-id='{{this.id}}'
      />

    </div>
    <h3 class='gallery__subtitle'>{{this.name}}</h3>
    <p class='gallery__years'>{{this.dates.start.localDate}}</p>
    {{#each this._embedded.venues}}
      <a
        href='https://www.google.com/maps/@{{this.location.latitude}},{{this.location.longitude}},18z'
        class='gallery__location'
        target='_blank'
        rel='noopener noreferrer'
      >

        <svg width='10' height='12' class='gallery__icon'>
          <path
            d='M3 0C1.346 0 0 1.403 0 3.128 0 5.296 3.003 9 3.003 9S6 5.19 6 3.128C6 1.403 4.654 0 3 0Zm.905 4.044c-.25.26-.577.39-.905.39a1.25 1.25 0 0 1-.905-.39c-.5-.52-.5-1.367 0-1.887a1.246 1.246 0 0 1 1.81 0c.5.52.5 1.367 0 1.887Z'
            fill='#fff'
          ></path>
        </svg>
        {{! <img
          class='gallery__icon'
          src='./images/location.svg'
          alt='location'
          loading='lazy'
        /> }}
        {{this.name}}
      </a>
    {{/each}}
  </li>
{{/each}}